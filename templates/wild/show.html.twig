{# templates/wild/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}{{ slug }}{% endblock %}

{% block content %}

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('program_edit', {'slug': program.slug}) }}">Éditer</a>
    {%endif%}


    <div class="media">
        <img class="align-self-start mr-3 program-poster" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>Categorie : {{ program.category.name }}</p>
        </div>
    </div>

    <h1>Acteur :</h1>
    <ul>
        {% for actor in program.actors %}
            <li><a href="/actor/{{ actor.slug }}">{{ actor.name }}</a></li>
        {% else %}
            <li>Aucun acteur pour cette série</li>
        {% endfor %}
    </ul>

    <h2>LISTE DES SAISONS</h2>
    {% for season in seasons %}
        <a href="{{ path('wild_show_season', {'seasonId': season.id}) }}">
            <ul><h3>SAISON {{ season.number }}</h3></ul>
                <li>Année {{ season.year }}</li>
                <li>Description : {{ season.description }}</li>
        </a>

    {% endfor %}

    <a href="{{ path('wild_index') }}">
        Retour à l'accueil
    </a>

{% endblock %}